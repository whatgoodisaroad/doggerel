  type:       exitcode-stdio-1.0
  main-is:    Doggerel/DegreeMapTests.hs
  other-modules:
    Doggerel.DegreeMap
  hs-source-dirs:
      src
    , tests
  build-depends:
    base >= 4 && < 5
    , containers
    , mtl
    , HUnit

Test-Suite CoreTests
  type:       exitcode-stdio-1.0
  main-is:    Doggerel/ConversionTests.hs
  other-modules:
    Doggerel.DegreeMap
    Doggerel.Core
    Doggerel.Conversion
  hs-source-dirs:
      src
    , tests
  build-depends:
    base >= 4 && < 5
    , containers
    , mtl
    , HUnit