# Time
######
dim time;

# SI time
unit second of time;
unit millisecond of time;
unit microsecond of time;
unit nanosecond of time;

# Astronomic time
unit minute of time;
unit hour of time;
unit day of time;
unit week of time;
unit common_year of time;

convert microsecond = 1000 * nanosecond;
convert millisecond = 1000 * microsecond;
convert second = 1000 * millisecond;
convert minute = 60 * second;
convert hour = 60 * minute;
convert day = 24 * hour;
convert week = 7 * day;
convert common_year = 365 * day;

